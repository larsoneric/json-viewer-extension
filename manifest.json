{
  "manifest_version": 3,
  "name": "JSON Viewer",
  "version": "1.0.0",
  "description": "View and format JSON from network responses. Auto-detects escaped JSON with syntax highlighting and easy clipboard access.",
  "devtools_page": "devtools.html",
  "homepage_url": "https://github.com/larsoneric/json-viewer-extension",
  "permissions": [
    "clipboardWrite"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
